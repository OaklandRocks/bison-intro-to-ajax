<h1>Contacts</h1>

<section>
  <table>
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Phone</th>
        <th>Email</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @contacts.each do |contact| %>
        <tr>
          <td><%= contact.first_name %></td>
          <td><%= contact.last_name %></td>
          <td><%= contact.phone %></td>
          <td><%= contact.email %></td>
          <td>
            <a href="/contacts/<%= contact.id%>" title="<%= contact.full_name %>">Details</a> |
            <a href="/contacts/<%= contact.id%>/edit" title="edit">Edit</a> |
            <form method="POST" action="/contacts/<%= contact.id %>">
              <input type="hidden" name="_method" value="DELETE">
              <input type="submit" value="Delete">
            </form>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>
<a id="new-contact" class="btn" href="/contacts/new">New Contact</a>
